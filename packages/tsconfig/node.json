{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "Node",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    }
}
